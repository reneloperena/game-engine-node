{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@vuhio/tsconfig/node-app.json",
  "include": ["src/**/*.ts", "src/api/graphql/graphql.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  }
}